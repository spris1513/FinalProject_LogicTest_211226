<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".LottoSimulatorActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="당첨 번호" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/txtWinNum1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:text="\?"/>

            <TextView
                android:id="@+id/txtWinNum2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:text="\?"/>

            <TextView
                android:id="@+id/txtWinNum3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:text="\?"/>

            <TextView
                android:id="@+id/txtWinNum4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:text="\?"/>

            <TextView
                android:id="@+id/txtWinNum5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:text="\?"/>

            <TextView
                android:id="@+id/txtWinNum6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:text="\?"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:text="+"/>

            <TextView
                android:id="@+id/txtBonusNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:text="\?"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="내 입력 번호"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:text="5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:text="10"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:text="12"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:text="15"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:text="16"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:text="24"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnBuyLotto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="로또 한장 구매하기"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자본 관련"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/txtMyMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소지 금액 : 10,000,000원"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/txtEarnMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="당첨 금액 : 0원"
            android:layout_marginTop="5dp"/>


        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="당첨 횟수"/>

        <TextView
            android:id="@+id/txtRankCount1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1등 : 0회"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/txtRankCount2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2등 : 0회"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/txtRankCount3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3등 : 0회"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/txtRankCount4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4등 : 0회"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/txtRankCount5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5등 : 0회"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/txtRankCountNone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="낙첨 : 0회"
            android:layout_marginTop="5dp"/>

    </LinearLayout>
</layout>
